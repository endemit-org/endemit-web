{
  "format": "page",
  "id": "event",
  "label": "Event",
  "repeatable": true,
  "status": true,
  "json": {
    "About": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "slug"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,heading2,strong,em,hyperlink,image,list-item"
        }
      },
      "cover_image": {
        "type": "Image",
        "config": {
          "label": "Cover image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "promo_image": {
        "type": "Image",
        "config": {
          "label": "Promo image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "video": {
        "type": "Link",
        "config": {
          "label": "Video",
          "placeholder": "Video for the event",
          "select": "media",
          "allowText": true
        }
      },
      "art_author": {
        "type": "Link",
        "config": {
          "label": "Art author",
          "placeholder": "",
          "select": null,
          "allowTargetBlank": true,
          "allowText": true,
          "repeat": false
        }
      }
    },
    "Venue": {
      "venue": {
        "type": "Link",
        "config": {
          "label": "Venue",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "venue",
              "fields": [
                "name",
                "address",
                "venue_logo",
                "map_location_url",
                "coordinates",
                "description"
              ]
            }
          ]
        }
      }
    },
    "Schedule": {
      "date_start": {
        "type": "Timestamp",
        "config": {
          "label": "Start",
          "placeholder": "When does the event start"
        }
      },
      "date_end": {
        "type": "Timestamp",
        "config": {
          "label": "End",
          "placeholder": "When does the event end"
        }
      },
      "artists": {
        "type": "Group",
        "config": {
          "label": "Artists",
          "repeat": true,
          "fields": {
            "artist": {
              "type": "Link",
              "config": {
                "label": "Artist",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "artist",
                    "fields": [
                      "name",
                      "description",
                      "image",
                      {
                        "id": "links",
                        "fields": ["type", "link"]
                      },
                      "video"
                    ]
                  }
                ]
              }
            },
            "start_time": {
              "type": "Timestamp",
              "config": {
                "label": "Start time",
                "placeholder": "When does the artist start"
              }
            },
            "duration": {
              "type": "Number",
              "config": {
                "label": "Duration (minutes)",
                "placeholder": "Duration in minutes 60 = 1 hour, 120 = 2 hours,..."
              }
            },
            "stage": {
              "type": "Text",
              "config": {
                "label": "Stage",
                "placeholder": "(Optional) name of the stage where artist will be. Leave blank if only 1 stage per venue"
              }
            },
            "image_override": {
              "type": "Image",
              "config": {
                "label": "Image override",
                "constraint": {},
                "thumbnails": []
              }
            },
            "video_override": {
              "type": "Link",
              "config": {
                "label": "Video override",
                "placeholder": "",
                "select": "media",
                "allowText": true
              }
            },
            "description_override": {
              "type": "StructuredText",
              "config": {
                "label": "Description override",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,strong,em,hyperlink"
              }
            }
          }
        }
      }
    },
    "Attributes": {
      "event_type": {
        "type": "Select",
        "config": {
          "label": "Event type",
          "placeholder": "",
          "options": ["Single day", "Festival", "Guest appearance"]
        }
      },
      "colour": {
        "type": "Color",
        "config": {
          "label": "Colour",
          "placeholder": "Event colour"
        }
      },
      "visibility": {
        "type": "Select",
        "config": {
          "label": "Visible in events",
          "placeholder": "",
          "options": ["Visible", "Hidden"]
        }
      },
      "enable_link_to_full_page": {
        "type": "Boolean",
        "config": {
          "label": "Enable link to full page",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": true
        }
      },
      "annotation": {
        "type": "Text",
        "config": {
          "label": "Annotation",
          "placeholder": "(Optional)"
        }
      },
      "allow_ticket_scanning": {
        "type": "Boolean",
        "config": {
          "label": "Allow ticket scanning",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      }
    },
    "Rich content": {
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "artist_list": {
              "type": "SharedSlice"
            },
            "event_list": {
              "type": "SharedSlice"
            },
            "vinyl_promo_section": {
              "type": "SharedSlice"
            },
            "poem": {
              "type": "SharedSlice"
            },
            "embed_block": {
              "type": "SharedSlice"
            },
            "podcast_list": {
              "type": "SharedSlice"
            },
            "text_column": {
              "type": "SharedSlice"
            },
            "tabs": {
              "type": "SharedSlice"
            },
            "product_list": {
              "type": "SharedSlice"
            },
            "spacer": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            },
            "grid_tile": {
              "type": "SharedSlice"
            },
            "image_gallery": {
              "type": "SharedSlice"
            },
            "newsletter_subscription": {
              "type": "SharedSlice"
            },
            "content_section": {
              "type": "SharedSlice"
            },
            "accordion": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
