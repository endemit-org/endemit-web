{
  "format": "page",
  "id": "event",
  "label": "Event",
  "repeatable": true,
  "status": true,
  "json": {
    "About": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "slug"
        }
      },
      "cover_image": {
        "type": "Image",
        "config": {
          "label": "Cover image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "promo_image": {
        "type": "Image",
        "config": {
          "label": "Promo image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "video": {
        "type": "Link",
        "config": {
          "label": "Video",
          "placeholder": "Video for the event",
          "select": "media",
          "allowText": true
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "Venue": {
      "venue": {
        "type": "Link",
        "config": {
          "label": "Venue",
          "select": "document",
          "repeat": false,
          "customtypes": ["venue"]
        }
      }
    },
    "Schedule": {
      "date_start": {
        "type": "Timestamp",
        "config": {
          "label": "Start",
          "placeholder": "When does the event start"
        }
      },
      "date_end": {
        "type": "Timestamp",
        "config": {
          "label": "End",
          "placeholder": "When does the event end"
        }
      },
      "artists": {
        "type": "Group",
        "config": {
          "label": "Artists",
          "repeat": true,
          "fields": {
            "artist": {
              "type": "Link",
              "config": {
                "label": "Artist",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "artist",
                    "fields": [
                      "name",
                      "description",
                      "image",
                      {
                        "id": "links",
                        "fields": ["type", "link"]
                      },
                      "video"
                    ]
                  }
                ]
              }
            },
            "start_time": {
              "type": "Timestamp",
              "config": {
                "label": "Start time",
                "placeholder": "When does the artist start"
              }
            },
            "duration": {
              "type": "Number",
              "config": {
                "label": "Duration (minutes)",
                "placeholder": "Duration in minutes 60 = 1 hour, 120 = 2 hours,..."
              }
            },
            "stage": {
              "type": "Text",
              "config": {
                "label": "Stage",
                "placeholder": "(Optional) name of the stage where artist will be. Leave blank if only 1 stage per venue"
              }
            },
            "image_override": {
              "type": "Image",
              "config": {
                "label": "Image override",
                "constraint": {},
                "thumbnails": []
              }
            },
            "video_override": {
              "type": "Link",
              "config": {
                "label": "Video override",
                "placeholder": "",
                "select": "media",
                "allowText": true
              }
            },
            "description_override": {
              "type": "StructuredText",
              "config": {
                "label": "Description override",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
              }
            }
          }
        }
      }
    },
    "Attributes": {
      "event_type": {
        "type": "Select",
        "config": {
          "label": "Event type",
          "placeholder": "",
          "options": ["Single day", "Festival", "Guest appearance"]
        }
      },
      "visibility": {
        "type": "Select",
        "config": {
          "label": "Visibility",
          "placeholder": "",
          "options": ["Visible", "Hidden"]
        }
      },
      "colour": {
        "type": "Color",
        "config": {
          "label": "Colour",
          "placeholder": "Event colour"
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
