{
  "format": "page",
  "id": "content_page",
  "label": "Content page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "render_frame": {
        "type": "Boolean",
        "config": {
          "label": "Render frame",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": true
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "banner": {
              "type": "SharedSlice"
            },
            "save_the_date": {
              "type": "SharedSlice"
            },
            "venue_list": {
              "type": "SharedSlice"
            },
            "sound_cloud": {
              "type": "SharedSlice"
            },
            "poem": {
              "type": "SharedSlice"
            },
            "vinyl_promo_section": {
              "type": "SharedSlice"
            },
            "event_list": {
              "type": "SharedSlice"
            },
            "spacer": {
              "type": "SharedSlice"
            },
            "artist_list": {
              "type": "SharedSlice"
            },
            "tabs": {
              "type": "SharedSlice"
            },
            "grid_tile": {
              "type": "SharedSlice"
            },
            "accordion": {
              "type": "SharedSlice"
            },
            "image_gallery": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            },
            "podcast_list": {
              "type": "SharedSlice"
            },
            "product_list": {
              "type": "SharedSlice"
            },
            "text_column": {
              "type": "SharedSlice"
            },
            "embed_block": {
              "type": "SharedSlice"
            },
            "newsletter_subscription": {
              "type": "SharedSlice"
            },
            "content_section": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "update_frequency": {
        "type": "Select",
        "config": {
          "label": "Update frequency",
          "placeholder": "",
          "options": [
            "always",
            "hourly",
            "daily",
            "weekly",
            "monthly",
            "yearly",
            "never"
          ]
        }
      },
      "priority": {
        "type": "Number",
        "config": {
          "label": "Priority",
          "placeholder": "1.0-0.8: High priority : 0.7-0.4: Mid priority : 0.3-0.0: Low priority"
        }
      }
    }
  }
}
